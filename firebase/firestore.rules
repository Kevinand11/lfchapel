rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /pictures/{id} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }

    function isAdmin() {
        return request.auth.token.isAdmin == true;
    }
  }
}
